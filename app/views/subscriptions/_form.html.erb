<%= form_for [@event, subscription] do |f| %>
  <%= render partial: 'partials/form_errors', locals: { errors: subscription.errors } %>

  <% unless user_signed_in? %>
    <div class="pt-3">
      <%= f.label t('views.subscriptions.form.user_name'), class: 'form-label' %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>

    <div class="pt-3">
      <%= f.label t('views.subscriptions.form.user_email'), class: 'form-label' %>
      <%= f.text_field :user_email, class: 'form-control' %>
    </div>
  <% end %>


  <div class="col-md-12 pt-3">
    <div class="actions">
      <%= f.submit "Подписаться", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
