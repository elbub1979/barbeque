<h1><%= t '.title' %></h1>
<p><%= t '.name' %>: <strong><%= @name %></strong></p>
<p><%= t '.email' %>: <strong><%= link_to @mail, "mailto:#{@email}" %></strong></p>
<hr/>

<%= t '.event' %>
<h3><%= @photo.event.title %></h3>

<%= t '.owner' %>
<h4><%= @photo.event.user.name %></h4>

<%= t '.datetime' %>
<h4><%= l @photo.event.datetime %></h4>

<%= t '.author' %>
<h4><%= @photo.user.name %></h4>

<% if @photo.photo.variable? %>
  <%= t '.photo' %>
  <p><%= url_for(@photo.photo.variant(:show)) if @photo.photo.attached? %>></p>
<% end %>