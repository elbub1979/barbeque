<div class="text-center">
  <h1><%= @user.name %></h1>
  <%= image_tag user_avatar(@user), class: 'rounded-circle' %>
  <% if @user == current_user %>
    <p class="py-2">
      <%= link_to 'Редактировать профиль', edit_user_path(@user), class: 'btn btn-secondary' %>
    </p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3>Организовал: <%= @user.events.count %> <%= translate(:events, :count => @user.events.count) %></h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="pt-2">Пользователь не организовал ни одного события</p>
      <% end %>
    </div>

  </div>
</div>
