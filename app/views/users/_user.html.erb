<span class="user">
  <span class="user_avatar">
    <%= image_tag(user_avatar(user), class: 'img_icon') %>
  </span>
  <span class="user_name">
    <% if request.path == user_path(user) %>
      <%= user.name %>
    <% else %>
      <%= link_to user.name, user_path(user) %>
    <% end %>
  </span>
</span>