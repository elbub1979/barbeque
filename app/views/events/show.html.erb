<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '',
                      class: 'event-background',
                      style: "background-image: url(#{event_photo(@event)})" %>
      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description px-2 py-2">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :short %></h3>
            <h3><small><%= link_to @event.address,
                                   "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
            <div class="px-2 py-2">
              <%= link_to t('.change'), edit_event_path(@event),
                          class: 'btn btn-primary' %>
              <%= link_to t('.destroy'), @event, data: { turbo_confirm: t(".sure"), turbo_method: :delete },
                          lass: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
        <div class="col-6 py-3">
          <div id="map"
               data-address="<%= @event.address %>"
               style="width: 300px; height: 200px">
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <div class="event-photos px-2">
        <div class="event-comment px-2">
          <% if current_user %>
            <%= render partial: 'photos/form', locals: { photo: @new_photo || @event.photos.build } %>
          <% end %>
          <div class="my-2 mx-2">
            <%= render partial: 'photos/photo', collection: @event.photos.except(@new_photo) %>
          </div>
        </div>
      </div>

      <div class="event-comment pt-3">
        <%= render partial: 'comments/form', locals: { comment: @new_comment || @event.comments.build } %>
        <div class="py-3">
          <%= render partial: 'comments/comment', collection: @event.comments.except(@new_comment) %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="event-owner">
        <h4><%= t('.calling') %></h4>
        <p><%= render partial: 'users/user', object: @event.user %></p>
      </div>
      <% event_subscriptions = @event.subscriptions.except(@new_subscription) %>
      <% if event_subscriptions.any? %>
        <div class="event-subscriptions">
          <h4><%= t('.will_go') %></h4>
          <div>
            <p>
              <%= render partial: 'subscriptions/subscription', collection: event_subscriptions %>
            </p>
          </div>
        </div>
      <% end %>

        <div class="event-subscription-form">
          <h4><%= t('.i_will_go') %></h4>
          <div>
            <%= render partial: 'subscriptions/form', locals: { subscription: @new_subscription || @event.subscriptions.build } %>
          </div>
        </div>
    </div>
  </div>
</div>