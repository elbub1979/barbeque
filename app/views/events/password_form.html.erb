<h1>Доступ только по пин-коду</h1>

<%= form_tag('', method: 'post') do |f| %>
  <div class="form-group">
    <%= label 'Пин-код', :pincode %>
    <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
  </div>

  <div class="py-2">
    <div class="actions">
      <%= submit_tag %>
    </div>
<% end %>
</div>

<div class="py-2">
  <%= link_to 'На главную', events_path, class: 'btn btn-success' %>
</div>